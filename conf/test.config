/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run flusra -profile test,<conda/mamba> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    bioproject                  = null
    sra_accessions              = "${baseDir}/test/input/sra/sra_ids.txt"
    milk_sra_accessions         = "${baseDir}/test/input/sra/milk_sra_ids.txt"
    email                       = "test@test.com"
    metadata                    = null
    // Reference genome
    reference                  = "${baseDir}/test/input/ref/reference.fasta"
    milk_reference             = "${baseDir}/test/input/ref/milk_reference.fasta"
    milk_barcode               = "${baseDir}/test/input/barcode/barcode.csv"
    outdir                     = "${baseDir}/testing/output"
}
